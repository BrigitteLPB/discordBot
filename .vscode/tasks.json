// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: compile",
			"type": "npm",
			"script": "compile",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "npm: watch",
			"type": "npm",
			"script": "watch"
		},
		{
			"label": "npm: run",
			"type": "npm",
			"script": "run",
			"dependsOn": [
				"npm: compile"
			],
			"problemMatcher": [
				"$tsc"
			],
			"group": "test"
		},
		{
			"label": "npm: install",
			"type": "npm",
			"group": "none",
			"script": "install"
		},
		{
			"type": "npm",
			"script": "test",
			"dependsOn": [
				"npm: compile"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},

		},
		{
			"label": "clean",
			"type": "shell",
			"group": "none",
			"problemMatcher": "$go",
			"windows": {
				// "command": "rd",
				"command": "del",
				"args": [
					// "${workspaceFolder}\\build",
					// "/f",
					// "/s",
					// "/q",
					"-Path",
					"${workspaceFolder}\\build",
					"-Force",
					"-Recurse"
				]
			},
			"linux": {
				"command": "rm",
				"args": [
					"-r",
					"${workspaceFolder}/build"
				]
			}
		},
		{
			"label": "clean module",
			"type": "shell",
			"group": "none",
			"problemMatcher": "$go",
			"windows": {
				"command": "rd",
				"args": [
					"/S",
					"${workspaceFolder}\\node_modules"
				]
			},
			"linux": {
				"command": "rm",
				"args": [
					"-r",
					"${workspaceFolder}/node_modules"
				]
			}
		}
	]
}
